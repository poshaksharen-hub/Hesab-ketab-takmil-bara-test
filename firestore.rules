
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read the list of all users.
    match /users/{userId} {
      allow list, read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Rules for the family chat system.
    match /chat/family-chat/messages/{messageId} {
      // Allow users to read messages only if they are a participant in the chat.
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;

      // Allow any authenticated user to create a new message.
      // This simplified rule removes complex conditions that were causing permission errors.
      allow create: if request.auth != null;

      // Users cannot update or delete messages for data integrity.
      allow update, delete: if false;
    }

    // Access rules for shared family data.
    match /family-data/{docId}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
