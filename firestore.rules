rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an authenticated family member based on their email.
    function isFamilyMember() {
      return request.auth != null && 
             request.auth.token.email in ['ali@khanevadati.app', 'fatemeh@khanevadati.app'];
    }
    
    // Rule for user-specific data (profiles)
    // Any family member can read or write any user profile.
    match /users/{userId} {
      allow read, write: if isFamilyMember();
    }

    // Rule for all shared family data, which lives under a single document 'shared-data'.
    match /family-data/shared-data {
      // Allow reading/writing the document itself, which is needed to access subcollections.
      allow read, write: if isFamilyMember();

      // Specific rules for EACH subcollection under 'shared-data'
      // Using 'create, update, delete' explicitly covers all write operations.
      match /bankAccounts/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /incomes/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /expenses/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /categories/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /payees/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /checks/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /financialGoals/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /loans/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /loanPayments/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /previousDebts/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /debtPayments/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
      match /transfers/{docId} {
        allow read, create, update, delete: if isFamilyMember();
      }
    }
  }
}
