    match /shared/data/{collection}/{docId} {
       function isSignedIn() {
            return request.auth != null;
        }

        function isCollaborator() {
            return isSignedIn() && request.auth.uid in resource.data.members;
        }

        function isCreatingCollaborator() {
             return isSignedIn() && request.auth.uid in request.resource.data.members;
        }

        function isExistingCollaborator() {
            return isCollaborator() && resource != null;
        }

        allow get: if isCollaborator();
        allow list: if isSignedIn();
