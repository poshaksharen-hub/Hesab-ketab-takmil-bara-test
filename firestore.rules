
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an authenticated family member based on their email.
    function isFamilyMember() {
      return request.auth != null && 
             request.auth.token.email in [
                'ali@khanevadati.app', 
                'fatemeh@khanevadati.app'
             ];
    }
    
    // Rule for user-specific data (profiles)
    // Any family member can read or write any user profile.
    match /users/{userId} {
      allow read, write: if isFamilyMember();
    }

    // Rule for all shared family data, which lives under a single document 'shared-data'.
    // This provides a single entry point for securing all subcollections.
    match /family-data/shared-data {
      // Allow reading/writing the document itself if needed in the future,
      // but the main purpose is to secure its subcollections.
      allow read, write: if isFamilyMember();
      
      // Generic rule for ALL subcollections under 'shared-data'
      match /{subcollection}/{docId} {
        allow read, write: if isFamilyMember();
      }
    }
  }
}
