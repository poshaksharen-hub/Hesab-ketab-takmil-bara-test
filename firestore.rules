rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Checks if the authenticated user is one of the two family members by their UID.
    function isFamilyMember() {
      return request.auth != null &&
             request.auth.uid in [
               "iwXrEC4MPze90eK0BExOdqMdTZ43", // ali@khanevadati.app
               "K927CSN4UfX04z05ZR1TsxGvWGu1"  // fatemeh@khanevadati.app
             ];
    }
    
    // Rule for user profiles
    match /users/{userId} {
      // Family members can read all profiles, but only the user can write to their own profile.
      allow read: if isFamilyMember();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for all shared family data subcollections
    match /family-data/shared-data/{subcollection}/{docId} {
      // Any authenticated family member can read, write, create, and delete any document
      // in any of the shared subcollections.
      allow read, write, create, delete: if isFamilyMember();
    }
  }
}
