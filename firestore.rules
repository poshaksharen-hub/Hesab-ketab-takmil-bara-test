rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read/write any document in any of the shared data subcollections.
    // This is a temporary, permissive rule to unblock development.
    match /family-data/shared-data/{subcollection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
