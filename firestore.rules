
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This rule correctly matches all documents and sub-collections
    // within family-data and gives full read/write access
    // to any authenticated user.
    match /family-data/{path=**} {
      allow read, write: if request.auth != null;
    }

    // Allow users to create their own profile, and read/update/delete ONLY
    // their own profile. This prevents listing all users.
    match /users/{userId} {
      // Any authenticated user can GET another user's profile individually.
      allow get: if request.auth != null; 
      // Explicitly deny listing the entire collection for security.
      allow list: if false; 
      // A user can only update or delete their OWN profile.
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      // Any authenticated user can create a user profile document (e.g., on first sign-up).
      allow create: if request.auth != null;
    }
  }
}
