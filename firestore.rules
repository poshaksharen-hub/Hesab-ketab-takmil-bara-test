
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This rule correctly matches all documents and sub-collections
    // within family-data and gives full read/write access
    // to any authenticated user.
    match /family-data/{path=**} {
      allow read, write: if request.auth != null;
    }

    // This rule is useful for managing users' own personal data
    // and is good practice to keep.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
  }
}
