
rules_version = '2';

// Hesab Ketab Firestore Security Rules
// Allows authenticated users to manage their family's financial data.

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read the list of all users.
    // Each user can only write to their own document.
    match /users/{userId} {
      allow list, read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // This is the main rule for all shared financial and chat data.
    // It allows any authenticated user full access to all subcollections
    // within the 'shared-data' document.
    match /family-data/shared-data/{collection}/{docId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
  }
}
