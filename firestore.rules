rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read and write to user profiles
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read and write to any document in any subcollection
    // under the shared-data document. This is a permissive rule to unblock development.
    match /family-data/shared-data/{subcollection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
