rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This function now checks for specific, immutable User IDs (UIDs).
    // This is more secure than checking mutable email addresses.
    function isFamilyMember() {
      return request.auth != null &&
             request.auth.uid in [
               "K927CSN4UfX04z05ZR1TsxGvWGu1", // Ali's UID
               "iwXrEC4MPze90eK0BExOdqMdTZ43"  // Fatemeh's UID
             ];
    }
    
    match /users/{userId} {
      // Any authenticated family member can read/write user profiles.
      allow read, write: if isFamilyMember();
    }

    match /family-data/shared-data/{subcollection}/{docId} {
      // This wildcard rule applies to ALL subcollections (loans, debts, etc.)
      // It allows any authenticated family member to perform any action.
      allow read, write: if isFamilyMember();
    }
  }
}
