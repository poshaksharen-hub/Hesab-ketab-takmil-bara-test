
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isFamilyMember() {
      return request.auth != null &&
             request.auth.uid in ["K927CSN4UfX04z05ZR1TsxGvWGu1", "iwXrEC4MPze90eK0BExOdqMdTZ43"];
    }

    match /users/{userId} {
      allow read: if isFamilyMember();
      allow write: if request.auth.uid == userId;
    }

    match /family-data/shared-data/{subcollection}/{docId} {
      allow read, write: if isFamilyMember();
    }
  }
}
