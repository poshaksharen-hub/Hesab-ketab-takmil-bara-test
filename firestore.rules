
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for Shared Family Data
    // This rule grants full read and write access to all documents and sub-collections
    // within the `/family-data` path to ANY authenticated user (i.e., Ali or Fatemeh).
    // This is the core of the shared financial management model.
    match /family-data/{path=**} {
      allow read, write: if request.auth != null;
    }

    // Rules for User Profiles
    // These rules are more restrictive to protect individual user profile data.
    match /users/{userId} {
      // Allow any authenticated user to list the collection to get names.
      // This is safe as user profiles only contain non-sensitive info like name/email.
      allow list: if request.auth != null;
      
      // A user can only get their OWN profile data directly.
      allow get: if request.auth != null && request.auth.uid == userId; 
      
      // A user can only update or delete their OWN profile.
      allow update, delete: if request.auth != null && request.auth.uid == userId;

      // Any authenticated user can create a user profile document, which happens
      // automatically on the first sign-in if the profile doesn't exist.
      allow create: if request.auth != null;
    }
  }
}
