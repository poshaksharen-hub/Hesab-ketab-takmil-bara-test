rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isFamilyMember() {
      return request.auth != null && 
             request.auth.token.email in ['ali@khanevadati.app', 'fatemeh@khanevadati.app'];
    }
    
    match /users/{userId} {
      allow read, write: if isFamilyMember();
    }

    match /family-data/shared-data {
      // Allow read/write on the 'shared-data' document itself
      allow read, write: if isFamilyMember();

      // Explicitly match any subcollection under 'shared-data'
      match /{subcollection}/{docId} {
        allow read, write: if isFamilyMember();
      }
    }
  }
}
