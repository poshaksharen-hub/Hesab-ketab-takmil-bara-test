rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for user profiles
    match /users/{userId} {
      // Any authenticated user can read any profile, but can only write to their own.
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for all shared family data subcollections
    match /family-data/shared-data/{subcollection}/{docId} {
      // Any authenticated user can read, write, create, and delete any document.
      // This is a temporary, permissive rule to unblock development.
      allow read, write: if request.auth != null;
    }
  }
}
