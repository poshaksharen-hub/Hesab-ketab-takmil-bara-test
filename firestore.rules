rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read and write to any document in the database.
    // This is a temporary, less secure rule to bypass persistent permission issues.

    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /family-data/shared-data/{subcollection}/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
