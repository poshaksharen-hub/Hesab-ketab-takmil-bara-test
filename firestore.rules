rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY RULE: Allows any authenticated user to perform actions.
    // This is to bypass the persistent permissions error.
    function isAllowed() {
      return request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if isAllowed();
    }

    match /family-data/shared-data/{subcollection}/{docId} {
      allow read, write: if isAllowed();
    }
  }
}
